<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Product Barcode List View -->
    <record id="product_barcode_view_list" model="ir.ui.view">
        <field name="name">product.barcode.list</field>
        <field name="model">product.barcode</field>
        <field name="arch" type="xml">
            <list string="Product Barcodes" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="barcode_type"/>
                <field name="product_id"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Product Barcode Form View -->
    <record id="product_barcode_view_form" model="ir.ui.view">
        <field name="name">product.barcode.form</field>
        <field name="model">product.barcode</field>
        <field name="arch" type="xml">
            <form string="Product Barcode">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="barcode_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this barcode..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Barcode Search View -->
    <record id="product_barcode_view_search" model="ir.ui.view">
        <field name="name">product.barcode.search</field>
        <field name="model">product.barcode</field>
        <field name="arch" type="xml">
            <search string="Search Barcodes">
                <field name="name"/>
                <field name="product_id"/>
                <field name="barcode_type"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'barcode_type'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Product Barcode Action -->
    <record id="product_barcode_action" model="ir.actions.act_window">
        <field name="name">Product Barcodes</field>
        <field name="res_model">product.barcode</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="product_barcode_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create additional barcodes for products
            </p>
            <p>
                Add multiple barcodes (EAN-13, EAN-8, UPC, QR codes, internal references)
                to each product variant for flexible scanning options.
            </p>
        </field>
    </record>

    <!-- Extend Product Template Form View -->
    <record id="product_template_form_view_barcode_scanner" model="ir.ui.view">
        <field name="name">product.template.form.barcode_scanner</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Barcodes" name="barcodes">
                    <field name="barcode_ids" context="{'default_product_id': product_variant_id}">
                        <list string="Additional Barcodes" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="barcode_type"/>
                            <field name="product_id" column_invisible="True"/>
                            <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                            <field name="notes" optional="hide"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Extend Product Variant Form View -->
    <record id="product_product_form_view_barcode_scanner" model="ir.ui.view">
        <field name="name">product.product.form.barcode_scanner</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Barcodes" name="barcodes">
                    <group>
                        <group>
                            <field name="barcode_count" invisible="1"/>
                        </group>
                    </group>
                    <field name="barcode_ids">
                        <list string="Additional Barcodes" editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="barcode_type"/>
                            <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                            <field name="notes" optional="hide"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Note: Menu item is added by barcode_scanner_sale module -->

</odoo>
